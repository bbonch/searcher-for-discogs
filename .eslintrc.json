{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "no-useless-escape": "off",
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "no-var": "error"
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "globals": {
        "$": "readonly",
        "chrome": "readonly",
        "ga": "readonly",
        "process": "readonly",
        "constants": "readonly"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}